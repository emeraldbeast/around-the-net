    <script>
        // Hamburger Menu Toggle
        const btn = document.getElementById('hamburger');
        const menu = document.getElementById('navLinks');
        const links = menu.querySelectorAll('a');

        btn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });

        links.forEach(link => {
            link.addEventListener('click', () => {
                if (window.innerWidth < 768) {
                    menu.classList.add('hidden');
                }
            });
        });

        // TV Slide Carousel Logic
        const images = [
            "/images/image1.png",
            "/images/image2.png",
            "/images/image3.png",
            "/images/image4.png",
            "/images/image5.png"
        ];

        let currentIndex = 0;
        const wrapper = document.getElementById("carouselWrapper");
        const img1 = document.getElementById("carouselImage1");
        const img2 = document.getElementById("carouselImage2");

        function nextImage() {
            currentIndex = (currentIndex + 1) % images.length;
            img2.src = images[currentIndex];
            wrapper.style.transform = "translateX(-100%)";

            setTimeout(() => {
                img1.src = img2.src;
                wrapper.style.transition = "none";
                wrapper.style.transform = "translateX(0)";
                setTimeout(() => {
                    wrapper.style.transition = "transform 0.7s ease-in-out";
                }, 50);
            }, 700);
        }

        function prevImage() {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            img2.src = images[currentIndex];
            wrapper.style.transform = "translateX(100%)";

            setTimeout(() => {
                img1.src = img2.src;
                wrapper.style.transition = "none";
                wrapper.style.transform = "translateX(0)";
                setTimeout(() => {
                    wrapper.style.transition = "transform 0.7s ease-in-out";
                }, 50);
            }, 700);
        }

        // Auto-slide every 2 seconds
        setInterval(() => {
            nextImage();
        }, 2000);

        // Category Toggle
        function toggleCategory(cat) {
            const section = document.getElementById(`category-${cat}`);
            const icon = document.getElementById(`icon-${cat}`);
            const isVisible = !section.classList.contains('hidden');

            section.classList.toggle('hidden', isVisible);
            icon.textContent = isVisible ? '+' : '−';
        }

        window.addEventListener("load", () => {
            const logo = document.getElementById("logo");
            const loader = document.getElementById("logo-loader");
            const content = document.getElementById("main-content");

            setTimeout(() => {
                logo.classList.add("top-[-200px]", "scale-[0.6]");
            }, 500);

            setTimeout(() => {
                loader.classList.add("opacity-0");
                content.classList.remove("opacity-0");

                setTimeout(() => {
                    loader.remove();
                }, 700);
            }, 1200);
        });

    </script>

