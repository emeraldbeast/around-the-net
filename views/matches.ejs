<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="icon"
        href="https://static.vecteezy.com/system/resources/previews/004/785/425/original/table-tennis-rackets-and-ball-vector.jpg"
        type="image/png">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tournament</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('page-loader');
            if (loader) loader.classList.add('opacity-0', 'pointer-events-none');
            const video = document.getElementById('tt-video');
            if (video) video.playbackRate = 0.5;
        });
    </script>
    <script defer src="/_vercel/insights/script.js"></script>
</head>

<body class="bg-zinc-600 text-yellow-100">
    <div id="page-loader"
        class="fixed inset-0 bg-white z-[100] flex items-center justify-center transition-opacity duration-[2000ms]">
        <video id="tt-video" autoplay muted loop playsinline class="w-[500px] h-[500px]">
            <source src="/animations/tt-loader.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="min-h-screen bg-zinc-900 text-yellow-100 px-6 py-10">
        <h1 class="text-4xl font-bold text-center mb-10">All Matches</h1>

        <div class="relative w-80 h-12 bg-zinc-800 rounded-full flex items-center justify-between px-2 mb-8 mx-auto">
            <button onclick="showCategory('live')" class="z-10 w-1/3 h-full text-sm font-bold">LIVE</button>
            <button onclick="showCategory('upcoming')" class="z-10 w-1/3 h-full text-sm font-bold">Upcoming</button>
            <button onclick="showCategory('past')" class="z-10 w-1/3 h-full text-sm font-bold">Past</button>
            <div id="slider"
                class="absolute top-0 left-0 w-1/3 h-full bg-yellow-500 rounded-full transition-all duration-300"></div>
        </div>

        <div id="match-live" class="match-category grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div onclick="location.href='/match/1'"
                class="cursor-pointer bg-green-500/10 backdrop-blur-md p-4 rounded-xl shadow hover:shadow-green-500 transition">
                <h3 class="text-xl font-bold mb-2">Dabang Delhi TTC vs Jaipur Patriots</h3>
                <p class="text-sm text-yellow-300">Date: Oct 21, 2025</p>
                <p class="text-sm text-green-400 font-semibold">Status: LIVE</p>
            </div>
        </div>

        <div id="match-upcoming" class="match-category hidden grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div onclick="location.href='/match/2'"
                class="cursor-pointer bg-blue-500/10 backdrop-blur-md p-4 rounded-xl shadow hover:shadow-blue-500 transition">
                <h3 class="text-xl font-bold mb-2">Ahmedabad SG Pipers vs Dempo Goa Challengers</h3>
                <p class="text-sm text-yellow-300">Date: Oct 22, 2025</p>
                <p class="text-sm text-blue-400 font-semibold">Status: Upcoming</p>
            </div>
        </div>

        <div id="match-past" class="match-category hidden grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div onclick="location.href='/match/3'"
                class="cursor-pointer bg-red-500/10 backdrop-blur-md p-4 rounded-xl shadow hover:shadow-red-500 transition">
                <h3 class="text-xl font-bold mb-2">Jaipur Patriots vs Dempo Goa Challengers</h3>
                <p class="text-sm text-yellow-300">Date: Oct 19, 2025</p>
                <p class="text-sm text-red-400 font-semibold">Status: Completed</p>
            </div>
        </div>
    </div>

    <script>
        function showCategory(cat) {
            const slider = document.getElementById("slider");
            const categories = ['live', 'upcoming', 'past'];

            categories.forEach((c, i) => {
                document.getElementById(`match-${c}`).classList.add('hidden');
                if (c === cat) {
                    document.getElementById(`match-${c}`).classList.remove('hidden');
                    slider.style.left = `${i * 33.33}%`;
                }
            });
        }
    </script>