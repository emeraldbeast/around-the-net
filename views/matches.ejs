<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Matches</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col items-center p-6">
  <h1 class="text-3xl font-bold mb-6 text-center">All Matches</h1>

  <div class="flex space-x-4 mb-8">
    <button class="tab-btn px-5 py-2 rounded-full font-semibold bg-yellow-400 text-black" data-tab="Live">LIVE</button>
    <button class="tab-btn px-5 py-2 rounded-full font-semibold bg-gray-700 hover:bg-gray-600" data-tab="Upcoming">Upcoming</button>
    <button class="tab-btn px-5 py-2 rounded-full font-semibold bg-gray-700 hover:bg-gray-600" data-tab="Past">Past</button>
  </div>

  <div id="tab-content" class="w-full max-w-2xl">
    <div data-content="Live">
      <% matchdata.filter(m => m.status === "Live").forEach(m => { %>
        <a href="/tournament/matches/<%= m.id %>">
          <div class="mb-4 p-4 bg-gray-800 rounded-lg shadow-lg border border-gray-700 hover:bg-gray-700 transition">
            <h2 class="text-xl font-semibold mb-2 text-yellow-300"><%= m.teamA %> vs <%= m.teamB %></h2>
            <p class="text-sm text-gray-400">Status: <span class="text-green-400 font-medium"><%= m.status %></span></p>
          </div>
        </a>
      <% }) %>
    </div>

    <div data-content="Upcoming" class="hidden">
      <% matchdata.filter(m => m.status === "Upcoming").forEach(m => { %>
        <a href="/tournament/matches/<%= m.id %>">
          <div class="mb-4 p-4 bg-gray-800 rounded-lg shadow-lg border border-gray-700 hover:bg-gray-700 transition">
            <h2 class="text-xl font-semibold mb-2 text-blue-300"><%= m.teamA %> vs <%= m.teamB %></h2>
            <p class="text-sm text-gray-400">Status: <span class="text-blue-400 font-medium"><%= m.status %></span></p>
          </div>
        </a>
      <% }) %>
    </div>

    <div data-content="Past" class="hidden">
      <% matchdata.filter(m => m.status === "Past").forEach(m => { %>
        <a href="/tournament/matches/<%= m.id %>">
          <div class="mb-4 p-4 bg-gray-800 rounded-lg shadow-lg border border-gray-700 hover:bg-gray-700 transition">
            <h2 class="text-xl font-semibold mb-2 text-red-300"><%= m.teamA %> vs <%= m.teamB %></h2>
            <p class="text-sm text-gray-400">Status: <span class="text-red-400 font-medium"><%= m.status %></span></p>
          </div>
        </a>
      <% }) %>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const buttons = document.querySelectorAll('.tab-btn');
      const contents = document.querySelectorAll('[data-content]');

      buttons.forEach(btn => {
        btn.addEventListener('click', () => {
          const selected = btn.getAttribute('data-tab');

          buttons.forEach(b => {
            b.classList.remove('bg-yellow-400', 'text-black');
            b.classList.add('bg-gray-700');
          });
          btn.classList.add('bg-yellow-400', 'text-black');
          btn.classList.remove('bg-gray-700');

          contents.forEach(c => {
            c.classList.toggle('hidden', c.getAttribute('data-content') !== selected);
          });
        });
      });
    });
  </script>
</body>
</html>
