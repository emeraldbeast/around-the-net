<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= match.teamA %> vs <%= match.teamB %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen p-6">
  <h1 class="text-3xl font-bold mb-4 text-center"><%= match.teamA %> vs <%= match.teamB %></h1>
  <p class="text-center text-gray-400 mb-6">Status: <span class="font-semibold text-yellow-400"><%= match.status %></span></p>

  <% match.submatches.forEach(sub => { %>
    <div class="mb-8 max-w-xl mx-auto rounded-lg overflow-hidden shadow-lg border border-gray-700">
      
      <div class="bg-gradient-to-r from-blue-400 to-blue-700 text-white text-center font-semibold text-sm py-2 tracking-wide">
        <%= sub.game %>
      </div>

      <div class="grid grid-cols-2">
        <div class="
          text-white p-4 text-center font-bold text-lg
          <%= sub.status === 'Completed' 
              ? (sub.winner === sub.playerA ? 'bg-green-600' : 'bg-red-600') 
              : sub.status === 'Ongoing' 
                ? 'bg-yellow-500 animate-pulse text-black' 
                : 'bg-gray-700' 
          %>">
          <%= sub.playerA %>
        </div>
        <div class="
          text-white p-4 text-center font-bold text-lg
          <%= sub.status === 'Completed' 
              ? (sub.winner === sub.playerB ? 'bg-green-600' : 'bg-red-600') 
              : sub.status === 'Ongoing' 
                ? 'bg-yellow-500 animate-pulse text-black' 
                : 'bg-gray-700' 
          %>">
          <%= sub.playerB %>
        </div>
      </div>

      <div class="
        grid grid-cols-3 text-center text-sm font-medium
        <%= sub.status === 'Completed' ? 'bg-gray-800 text-white' 
            : sub.status === 'Ongoing' ? 'bg-yellow-300 text-black' 
            : 'bg-gray-800 text-gray-400' 
        %>">
        <% sub.games.forEach(g => { %>
          <div class="py-2 border-r last:border-r-0 
            <%= sub.status === 'Completed' ? 'border-gray-700' 
                : sub.status === 'Ongoing' ? 'border-yellow-400' 
                : 'border-gray-700' 
            %>">
            <%= g %>
          </div>
        <% }) %>
      </div>

      <p class="text-center text-xs text-gray-400 bg-gray-900 py-2 italic">
        Status: <%= sub.status %> <% if (sub.winner) { %> | Winner: <%= sub.winner %> <% } %>
      </p>
    </div>
  <% }) %>

  <div class="mt-8 text-center">
    <a href="/tournament/matches" class="inline-block px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-full transition">‚Üê Back to All Matches</a>
  </div>
</body>
</html>
